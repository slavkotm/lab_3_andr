<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E1E0D4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".Edit_one_Activity">

    <TableRow>
        <TextView
            android:id="@+id/textview1_1"
            android:textSize="22sp"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/firstname"/>

        <EditText
            android:id="@+id/edittext1_1"
            android:textSize="22sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/F" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textview1_2"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"/>

        <EditText
            android:id="@+id/edittext1_2"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/N" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/button1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:background="#11FF00"
            android:text="@string/apply"
            android:textColor="#000000"
            />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/button1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:background="#FF0000"
            android:text="@string/cancel"
            android:textColor="#000000" />
    </TableRow>


</TableLayout>